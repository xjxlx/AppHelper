<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shopping_number"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_minus_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_minus_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_9"
            android:text="➖"
            android:textColor="#FF333A4A"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_minus_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shopping_minus_sign"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="1"
        android:textColor="#FF333A4A"
        android:textSize="@dimen/sp_15" />

    <FrameLayout
        android:id="@+id/fl_plus_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_plus_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_9"
            android:text="➕"
            android:textColor="#FF333A4A"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_plus_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shopping_plus_sign"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>